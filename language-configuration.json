// Guide for language configuration
// https://code.visualstudio.com/api/language-extensions/language-configuration-guide
{
    "comments": {
        "lineComment": "",
        "blockComment": [ "<!--", "-->" ]
    },
    "brackets": [
        ["<", ">"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["<", ">"],
        ["(", ")"],
        ["$(", ")"],
        ["@(", ")"],
        ["%(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "autoCloseBefore": ";:.,=}])>< \n\t",
    "surroundingPairs": [
        ["<", ">"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^(?!.*</).*<[^/?].*?>",
        "decreaseIndentPattern": "^(?!.*<[^/]).*<\/.*?>"
    }
}